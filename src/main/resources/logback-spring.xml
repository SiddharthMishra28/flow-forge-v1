<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Console appender for general logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for general logging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/pipeline-orchestrator.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/pipeline-orchestrator.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Custom appender for flow execution logs that sends to WebSocket -->
    <appender name="FLOW_EXECUTION_WEBSOCKET" class="com.testautomation.orchestrator.logging.FlowExecutionLogAppender">
        <!-- This appender will be auto-configured by Spring -->
    </appender>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="FLOW_EXECUTION_WEBSOCKET"/>
    </root>
    
    <!-- Specific logger configurations -->
    <logger name="com.testautomation.orchestrator" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="FLOW_EXECUTION_WEBSOCKET"/>
    </logger>
    
    <!-- Flow execution specific logger -->
    <logger name="com.testautomation.orchestrator.service.FlowExecutionService" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="FLOW_EXECUTION_WEBSOCKET"/>
    </logger>
    
    <!-- Pipeline execution specific logger -->
    <logger name="com.testautomation.orchestrator.service.PipelineExecutionService" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="FLOW_EXECUTION_WEBSOCKET"/>
    </logger>
    
    <!-- Reduce noise from Spring and other frameworks -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    
    <!-- Profile-specific configurations -->
    <springProfile name="local,test">
        <logger name="org.springframework.web" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
    </springProfile>
    
    <springProfile name="production">
        <logger name="com.testautomation.orchestrator" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
    </springProfile>
    
</configuration>